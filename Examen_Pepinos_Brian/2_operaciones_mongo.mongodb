use('gastro_app');

//db.platos.drop();

db.createCollection("platos", {
    validator: {
        $jsonSchema: {
            bsonType: "object",
            required: ["nombre_plato", "precio", "id_categoria"],
            additionalProperties: false,
            properties: {
                _id: {},
                nombre_plato: { 
                    bsonType: "string"
                },
                precio: {
                    bsonType: "number",
                    minimum: 0,
                },
                id_categoria: {
                    bsonType: "number",
                },
                es_alcoholica: { 
                    bsonType: "bool" 
                },
                tamano_ml: { 
                    bsonType: "int",
                    minimum: 350 
                },
                alergenos: { 
                    bsonType: "array", 
                    items: { bsonType: "string" } 
                },
                es_vegano: { 
                    bsonType: "bool" 
                }
            }
        }
    }
});


